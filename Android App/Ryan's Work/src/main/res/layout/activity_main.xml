<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPERCENTAGE"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="125dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome_to_battsave"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/percentage_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVOLTAGE"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="38dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome_to_battsave"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temperature_button"
        app:layout_constraintTop_toBottomOf="@+id/textViewCURRENT" />

    <TextView
        android:id="@+id/textViewCURRENT"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="38dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome_to_battsave"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/current_button"
        app:layout_constraintTop_toBottomOf="@+id/textViewTEMPERATURE" />

    <TextView
        android:id="@+id/textViewTEMPERATURE"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="38dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome_to_battsave"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/voltage_button"
        app:layout_constraintTop_toBottomOf="@+id/textViewPERCENTAGE" />

    <TextView
        android:id="@+id/textview_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/welcome_to_Battsave"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/percentage_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:background="@color/buttonBackground"
        android:onClick="percentMe"
        android:text="Percentage"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/voltage_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:background="@color/buttonBackground"
        android:onClick="voltMe"
        android:text="Voltage"
        app:layout_constraintTop_toBottomOf="@+id/percentage_button"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/current_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:background="@color/buttonBackground"
        android:onClick="ampMe"
        android:text="Current"
        app:layout_constraintTop_toBottomOf="@+id/voltage_button"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/temperature_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:background="@color/buttonBackground"
        android:onClick="tempMe"
        android:text="Temperature"
        app:layout_constraintTop_toBottomOf="@+id/current_button"
        tools:layout_editor_absoluteX="34dp" />

</android.support.constraint.ConstraintLayout>